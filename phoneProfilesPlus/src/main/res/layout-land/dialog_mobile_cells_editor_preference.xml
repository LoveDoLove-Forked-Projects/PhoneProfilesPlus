<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_cells_pref_dlg_rella_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:paddingTop="@dimen/alert_dialog_top_padding" >

    <LinearLayout
        android:id="@+id/mobile_cells_pref_dlg_linla_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/mobile_cells_pref_dlg_reLa2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/mobile_cells_pref_dlg_sort"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:padding="@dimen/image_button_padding"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_button_sort"
                app:tint="@color/accent_color"
                android:background="@drawable/editor_ripple_item_right_button"
                android:scaleType="fitCenter"
                android:contentDescription="@string/mobile_cells_pref_dlg_button_tooltip"/>

            <TextView
                android:id="@+id/mobile_cells_pref_dlg_cells_filter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingStart="@dimen/layout_as_button_padding"
                android:paddingEnd="@dimen/layout_as_button_padding"
                android:minHeight="@dimen/filter_button_min_height"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf = "@id/mobile_cells_pref_dlg_sort"
                android:textSize="16sp"
                android:textColor="@color/accent_color"
                android:textStyle="bold"
                android:background="@drawable/pp_button_background_selector"
                android:clickable="true"
                android:focusable="true"/>
            <!--            android:paddingTop="@dimen/filter_button_top_bottom_padding"-->
            <!--            android:paddingBottom="@dimen/filter_button_top_bottom_padding"-->


        </RelativeLayout>

        <View
            android:id="@+id/mobile_cells_pref_dlg_titleBarDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginStart="@dimen/divider_margin"
            android:layout_marginEnd="@dimen/divider_margin"
            android:background="@color/dialogDividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/divider_margin"
            android:layout_marginEnd="@dimen/divider_margin"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mobile_cells_pref_dlg_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/mobile_cells_pref_dlg_empty_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_empty_list"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/empty_list_content_description" />

                </RelativeLayout>

                <ListView
                    android:id="@+id/mobile_cells_pref_dlg_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:clipToPadding="false"
                    android:choiceMode="singleChoice"
                    android:scrollbarStyle="outsideOverlay"
                    android:fadeScrollbars="false"
                    android:divider="@android:color/transparent"
                    android:listSelector="?attr/listViewItemBackground"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mobile_cells_pref_dlg_reLa1_simDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp" >
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/mobile_cells_pref_dlg_addCellButton_simDefault"
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:padding="@dimen/image_button_padding"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_button_add"
                        app:tint="@color/accent_color"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/mobile_cells_pref_dlg_add_button_tooltip"
                        android:background="@drawable/editor_ripple_item_right_button" />
                    <TextView
                        android:id="@+id/mobile_cells_pref_dlg_connectedCell_simDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_cells_pref_dlg_connected_cell"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/mobile_cells_pref_dlg_addCellButton_simDefault"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mobile_cells_pref_dlg_reLa1_sim1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="3dp"
                    tools:ignore="InconsistentLayout">
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/mobile_cells_pref_dlg_addCellButton_sim1"
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:padding="@dimen/image_button_padding"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_button_add"
                        app:tint="@color/accent_color"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/mobile_cells_pref_dlg_add_button_tooltip"
                        android:background="@drawable/editor_ripple_item_right_button" />
                    <TextView
                        android:id="@+id/mobile_cells_pref_dlg_connectedCell_sim1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_cells_pref_dlg_connected_cell_sim1"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/mobile_cells_pref_dlg_addCellButton_sim1"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mobile_cells_pref_dlg_reLa1_sim2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="InconsistentLayout" >
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/mobile_cells_pref_dlg_addCellButton_sim2"
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:padding="@dimen/image_button_padding"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_button_add"
                        app:tint="@color/accent_color"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/mobile_cells_pref_dlg_add_button_tooltip"
                        android:background="@drawable/editor_ripple_item_right_button" />
                    <TextView
                        android:id="@+id/mobile_cells_pref_dlg_connectedCell_sim2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_cells_pref_dlg_connected_cell_sim2"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/mobile_cells_pref_dlg_addCellButton_sim2"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mobile_cells_pref_dlg_locationSystemSettingsRelLa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp" >
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/mobile_cells_pref_dlg_locationSystemSettingsButton"
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:padding="@dimen/image_button_padding"
                        android:layout_marginEnd="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_button_settings"
                        app:tint="@color/accent_color"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/location_settings_button_tooltip"
                        android:background="@drawable/editor_ripple_item_right_button" />
                    <TextView
                        android:id="@+id/mobile_cells_pref_dlg_locationEnableStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/phone_profiles_pref_eventLocationSystemSettings"
                        android:layout_toStartOf="@id/mobile_cells_pref_dlg_locationSystemSettingsButton" />
                </RelativeLayout>

                <Button
                    android:id="@+id/mobile_cells_pref_dlg_rescanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/mobile_cells_pref_dlg_rescan_button"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:minHeight="@dimen/button_min_height"
                    android:paddingStart="@dimen/button_padding"
                    android:paddingEnd="@dimen/button_padding"
                    android:minWidth="@dimen/button_min_width"
                    android:textColor="@color/action_button_text_color"
                    android:textStyle="bold"
                    android:background="@drawable/pp_button_background_selector"
                    style="?android:attr/borderlessButtonStyle" />

                <RelativeLayout
                    android:id="@+id/mobile_cells_pref_dlg_et_btn2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/mobile_cells_pref_dlg_helpIcon"
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:padding="@dimen/image_button_padding"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_button_help"
                        app:tint="@color/accent_color"
                        android:scaleType="fitCenter"
                        android:background="@drawable/editor_ripple_item_right_button"
                        android:contentDescription="@string/help_button_tooltip"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/mobile_cells_pref_dlg_changeSelection"
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:padding="@dimen/image_button_padding"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf = "@id/mobile_cells_pref_dlg_helpIcon"
                        android:src="@drawable/ic_button_select"
                        app:tint="@color/accent_color"
                        android:background="@drawable/editor_ripple_item_right_button"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/mobile_cells_pref_dlg_select_button_tooltip"/>

                    <Button
                        android:id="@+id/mobile_cells_pref_dlg_rename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@id/mobile_cells_pref_dlg_changeSelection"
                        android:minHeight="@dimen/button_min_height"
                        android:paddingStart="@dimen/button_padding"
                        android:paddingEnd="@dimen/button_padding"
                        android:minWidth="@dimen/button_min_width"
                        android:text="@string/mobile_cells_pref_dlg_rename_cell_button_tooltip"
                        android:textColor="@color/action_button_text_color"
                        android:textStyle="bold"
                        android:background="@drawable/pp_button_background_selector"
                        style="?android:attr/borderlessButtonStyle" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/mobile_cells_dialog_buttonBarDivider2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/divider_margin"
        android:layout_marginEnd="@dimen/divider_margin"
        android:layout_below="@id/mobile_cells_pref_dlg_linla_listview"
        android:background="@color/dialogDividerColor" />

</RelativeLayout>
