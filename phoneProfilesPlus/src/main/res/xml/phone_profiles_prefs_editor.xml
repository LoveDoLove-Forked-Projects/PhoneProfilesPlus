<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="categoryEditor"
    app:title="@string/phone_profiles_pref_category_editor">

    <sk.henrichg.phoneprofilesplus.CustomSwitchPreference
        app:key="applicationEditorPrefIndicator"
        app:title="@string/phone_profiles_pref_applicationPrefIndicator"
        app:summary="@string/phone_profiles_pref_applicationPrefIndicator_summary"
        app:defaultValue="true"
        app:layout="@layout/mp_preference_material_widget"
        app:widgetLayout="@layout/preference_widget_custom_switch" />
    <sk.henrichg.phoneprofilesplus.CustomSwitchPreference
        app:key="applicationEditorHideEventDetails"
        app:title="@string/phone_profiles_pref_applicationHideEventDetails"
        app:summary="@string/phone_profiles_pref_applicationHideEventDetails_summary"
        app:defaultValue="false"
        app:layout="@layout/mp_preference_material_widget"
        app:widgetLayout="@layout/preference_widget_custom_switch" />
    <sk.henrichg.phoneprofilesplus.CustomSwitchPreference
        app:key="applicationEditorHideEventDetailsForStartOrder"
        app:title="@string/phone_profiles_pref_applicationHideEventDetailsForStartOrder"
        app:summary="@string/phone_profiles_pref_applicationHideEventDetailsForStartOrder_summary"
        app:defaultValue="true"
        app:layout="@layout/mp_preference_material_widget"
        app:widgetLayout="@layout/preference_widget_custom_switch" />
    <sk.henrichg.phoneprofilesplus.CustomSwitchPreference
        app:key="applicationEditorHideHeaderOrBottomBar"
        app:title="@string/phone_profiles_pref_applicationHideHeaderOrBottomBar"
        app:summary="@string/phone_profiles_pref_applicationHideHeaderOrBottomBar_summary"
        app:defaultValue="true"
        app:layout="@layout/mp_preference_material_widget"
        app:widgetLayout="@layout/preference_widget_custom_switch" />
    <sk.henrichg.phoneprofilesplus.BetterNumberPickerPreference
        app:key="applicationDeleteOldActivityLogs"
        app:summary="@string/phone_profiles_pref_deleteOldActivityLogs"
        app:title="@string/phone_profiles_pref_deleteOldActivityLogs"
        app:defaultValue="7"
        app:min="0"
        app:max="30"
        app:layout="@layout/mp_preference_material_widget" />

    <sk.henrichg.phoneprofilesplus.StartActivityPreference
        app:key="applicationCreateEditorShortcut"
        app:title="@string/phone_profiles_pref_createEditorShortcut"
        app:summary="@string/phone_profiles_pref_createEditorShortcut_summary"
        app:layout="@layout/mp_preference_material_widget" />

</androidx.preference.PreferenceScreen>