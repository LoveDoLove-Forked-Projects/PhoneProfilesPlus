<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="2dp">

<ripple android:color="@color/rippleOvalItemBackgroundColor">

    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/pppColorBlack" />
            <corners android:radius="@dimen/icon_selector_radius" />
        </shape>
    </item>

    <item>
        <selector>
            <item android:state_selected="true">
                <color android:color="@color/rippleOvalItemBackgroundColor"/>
            </item>

            <item android:state_activated="true">
                <color android:color="@color/rippleOvalItemBackgroundColor"/>
            </item>

            <item>
                <color android:color="@android:color/transparent"/>
            </item>
        </selector>
    </item>

</ripple>

</inset>