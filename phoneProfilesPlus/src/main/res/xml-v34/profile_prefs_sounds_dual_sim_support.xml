<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:title="@string/profile_preferences_deviceDualSIMSupport"
    app:key="prf_pref_deviceSoundsDualSIMSupportCategory" >

    <Preference
        app:key="prf_pref_soundDualSIMSupportInfo"
        app:title="@string/profile_preferences_deviceDualSIMSupport_summary"
        app:summary=""
        app:layout="@layout/mp_preference_material_widget" />

    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:title="@string/profile_preferences_soundRingtoneChangeSIM1"
        app:summary="@string/array_pref_no_change"
        app:key="prf_pref_soundRingtoneChangeSIM1"
        app:defaultValue="0"
        app:ppEntries="@array/soundChangeArray"
        app:ppEntryValues="@array/soundChangeValues"
        app:layout="@layout/mp_preference_material_widget" />
    <sk.henrichg.phoneprofilesplus.RingtonePreference
        app:key="prf_pref_soundRingtoneSIM1"
        app:summary="@string/ringtone_preference_not_set"
        app:title="@string/profile_preferences_soundRingtoneSIM1"
        app:ringtoneType="ringtone"
        app:showSilent="true"
        app:showDefault="true"
        app:simCard="1"
        app:layout="@layout/mp_preference_material_widget" />

    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:title="@string/profile_preferences_soundRingtoneChangeSIM2"
        app:summary="@string/array_pref_no_change"
        app:key="prf_pref_soundRingtoneChangeSIM2"
        app:defaultValue="0"
        app:ppEntries="@array/soundChangeArray"
        app:ppEntryValues="@array/soundChangeValues"
        app:layout="@layout/mp_preference_material_widget" />
    <sk.henrichg.phoneprofilesplus.RingtonePreference
        app:key="prf_pref_soundRingtoneSIM2"
        app:summary="@string/ringtone_preference_not_set"
        app:title="@string/profile_preferences_soundRingtoneSIM2"
        app:ringtoneType="ringtone"
        app:showSilent="true"
        app:showDefault="true"
        app:simCard="2"
        app:layout="@layout/mp_preference_material_widget" />

    <!-- this is for Xiaomi, OnePlus devices -->
    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:key="prf_pref_soundSameRingtoneForBothSIMCards"
        app:title="@string/profile_preferences_soundSameRingtoneForBothSIMCards"
        app:summary="@string/array_pref_no_change"
        app:defaultValue="0"
        app:ppEntries="@array/soundSameRingtoneForBothSIMCardsArray"
        app:ppEntryValues="@array/soundSameRingtoneForBothSIMCardsValues"
        app:layout="@layout/mp_preference_material_widget" />

    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:title="@string/profile_preferences_soundNotificationChangeSIM1"
        app:summary="@string/array_pref_no_change"
        app:key="prf_pref_soundNotificationChangeSIM1"
        app:defaultValue="0"
        app:ppEntries="@array/soundChangeArray"
        app:ppEntryValues="@array/soundChangeValues"
        app:layout="@layout/mp_preference_material_widget" />
    <sk.henrichg.phoneprofilesplus.RingtonePreference
        app:key="prf_pref_soundNotificationSIM1"
        app:summary="@string/ringtone_preference_not_set"
        app:title="@string/profile_preferences_soundNotificationSIM1"
        app:ringtoneType="notification"
        app:showSilent="true"
        app:showDefault="true"
        app:simCard="1"
        app:layout="@layout/mp_preference_material_widget" />

    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:title="@string/profile_preferences_soundNotificationChangeSIM2"
        app:summary="@string/array_pref_no_change"
        app:key="prf_pref_soundNotificationChangeSIM2"
        app:defaultValue="0"
        app:ppEntries="@array/soundChangeArray"
        app:ppEntryValues="@array/soundChangeValues"
        app:layout="@layout/mp_preference_material_widget" />
    <sk.henrichg.phoneprofilesplus.RingtonePreference
        app:key="prf_pref_soundNotificationSIM2"
        app:summary="@string/ringtone_preference_not_set"
        app:title="@string/profile_preferences_soundNotificationSIM2"
        app:ringtoneType="notification"
        app:showSilent="true"
        app:showDefault="true"
        app:simCard="2"
        app:layout="@layout/mp_preference_material_widget" />

