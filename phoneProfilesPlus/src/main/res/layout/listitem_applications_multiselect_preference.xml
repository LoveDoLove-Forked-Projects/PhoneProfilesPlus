<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/applications_multiselect_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listItem_height"
    android:orientation="horizontal"
    android:background="?attr/listViewItemBackground"  >

    <CheckBox
        android:id="@+id/applications_multiselect_pref_dlg_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
        android:layout_gravity="center_vertical"
        android:buttonTint="@color/checkbox_radiobutton_color"
        android:checked="false"
        android:focusable="false" />

    <ImageView
        android:id="@+id/applications_multiselect_pref_dlg_item_icon"
        android:layout_width="@dimen/listItem_profile_icon_size"
        android:layout_height="@dimen/listItem_profile_icon_size"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/applications_editor_dialog_item_icon"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/applications_multiselect_pref_dlg_item_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text=""
        android:textSize="@dimen/listItem_profile_name_size"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"/>

</LinearLayout>
