<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nfc_tag_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">

    <LinearLayout
        android:id="@+id/nfc_tag_pref_dlg_item_buttons_root"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nfc_tag_pref_dlg_item_edit_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/editor_ripple_item_right_button"
            android:contentDescription="@string/tooltip_options_menu"
            android:src="@drawable/ic_list_item_edit_menu"
            android:focusable="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nfc_tag_pref_dlg_item_reLa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/nfc_tag_pref_dlg_item_buttons_root"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" >

        <CheckBox
            android:id="@+id/nfc_tag_pref_dlg_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
            android:layout_gravity="center_vertical"
            android:buttonTint="@color/checkbox_radiobutton_color"
            android:checked="false"
            android:focusable="false" />

        <LinearLayout
            android:id="@+id/nfc_tag_pref_dlg_item_liLa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nfc_tag_pref_dlg_item_tagName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <!--<TextView
                android:id="@+id/nfc_tag_pref_dlg_item_tagUid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/empty_string" />-->

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
