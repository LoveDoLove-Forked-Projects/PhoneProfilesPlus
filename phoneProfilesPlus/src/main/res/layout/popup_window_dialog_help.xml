<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_help_popup_window_root"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popupwindow_background" >

        <include layout="@layout/popup_window_title" />

        <ScrollView
            android:id="@+id/dialog_help_popup_window_scroll_view"
            android:layout_width="@dimen/popup_widow_dialog_help_width"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp">
<!--            android:fadeScrollbars="false" >-->

            <LinearLayout
                android:id="@+id/dialog_help_popup_window_liLa1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:paddingTop="7dp">

                <TextView
                    android:id="@+id/dialog_help_popup_window_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/gui_info_popup_text_size" />

            </LinearLayout>

        </ScrollView>

</LinearLayout>