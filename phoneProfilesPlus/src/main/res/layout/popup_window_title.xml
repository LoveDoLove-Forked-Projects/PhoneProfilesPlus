<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_window_root_linla"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/popup_window_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="4dp"
        android:paddingTop="3dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/popup_window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/gui_info_popup_title_size"
            android:textStyle="bold"
            android:textColor="@color/activityNormalTextColor"
            android:text="Title"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/popup_window_close"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:padding="@dimen/image_button_padding"
            android:layout_gravity="end"
            android:background="@drawable/actionbar_item_background"
            android:src="@drawable/ic_button_close"
            app:tint="@color/accent_color"
            android:scaleType="fitCenter"
            android:contentDescription="@string/popup_window_close_button_name"
            app:textAllCaps="true" />

    </RelativeLayout>

    <View
        android:id="@+id/profile_pref_dlg_listview_titleBarDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/popupWindowDividerColor" />

</LinearLayout>

