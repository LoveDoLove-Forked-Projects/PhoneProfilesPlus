<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_profile_list_item"
    android:layout_width="match_parent"

    android:layout_height="50dp"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/widget_list_item_selector">

    <ImageView
        android:id="@+id/widget_profile_list_item_profile_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_default"
        android:contentDescription="@string/profile_preferences_profileIcon" />

    <!-- space between icon and name - useful for multiline profile name -->
    <!--    <FrameLayout-->
    <!--        android:id="@+id/act_prof_list_item_space"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:layout_weight="1"/>-->

    <TextView
        android:id="@+id/widget_profile_list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:minLines="1"
        android:maxLines="2"
        android:text="@string/profile_name_default"
        android:textSize="15dp"

        android:visibility="gone"

        tools:ignore="SpUsage" />

    <RelativeLayout
        android:id="@+id/widget_profile_list_item_activated_profile_mark"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <!--        android:visibility="gone"-->

    </RelativeLayout>

</LinearLayout>

