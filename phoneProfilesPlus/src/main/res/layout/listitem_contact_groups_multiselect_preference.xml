<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_groups_multiselect_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/listItem_paddingTopBototm_height"
    android:paddingBottom="@dimen/listItem_paddingTopBototm_height" >

    <CheckBox
        android:id="@+id/contact_groups_multiselect_pref_dlg_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
        android:layout_gravity="center_vertical"
        android:buttonTint="@color/checkbox_radiobutton_color"
        android:checked="false"
        android:focusable="false" />

    <LinearLayout
        android:id="@+id/contact_groups_multiselect_pref_dlg_item_liLa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginEnd="10dp" >

        <TextView
            android:id="@+id/contact_groups_multiselect_pref_dlg_item_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/listItem_label_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_groups_multiselect_pref_dlg_item_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/listItem_secondary_text_size"
            android:textStyle="italic"/>

    </LinearLayout>


</LinearLayout>
