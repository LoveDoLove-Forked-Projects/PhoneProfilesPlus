<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ringtone_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/listItem_paddingTopBototm_height"
    android:paddingBottom="@dimen/listItem_paddingTopBototm_height">

    <RadioButton
        android:id="@+id/ringtone_pref_dlg_item_radiobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="6dp"
        android:layout_gravity="center_vertical"
        android:buttonTint="@color/checkbox_radiobutton_color"
        android:checked="false"
        android:focusable="false" />

    <ImageView
        android:id="@+id/ringtone_pref_dlg_item_rigtone_type_image"
        android:layout_width="@dimen/listItem_icon_size"
        android:layout_height="@dimen/listItem_icon_size"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/tone_content_description"
        android:src="@drawable/ic_ringtone_system" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
<!--            android:layout_alignParentEnd="true"-->

        <TextView
            android:id="@+id/ringtone_pref_dlg_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/listItem_label_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ringtone_pref_dlg_item_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text=""
            android:textSize="@dimen/listItem_secondary_text_size"
            android:textColor="@color/preferenceSummaryTextColor"/>

    </LinearLayout>

</LinearLayout>
