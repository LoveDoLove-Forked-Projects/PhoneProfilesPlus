<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileicon_preference_gridview_item_root"
    android:layout_width="50dp"
    android:layout_height="53dp"
    android:orientation="vertical">

    <View
        android:id="@+id/profileicon_preference_gridview_item_mark"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/profile_icon_mark" />
    <!--    android:layout_marginStart="3dp"-->
    <!--    android:layout_marginEnd="3dp"-->
    <!--    android:layout_marginTop="-18dp"-->

    <ImageView
        android:id="@+id/profileicon_preference_gridview_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_default"
        android:contentDescription="@string/profile_preferences_profileIcon" />
    <!--    android:layout_centerHorizontal="true"-->
    <!--    android:layout_centerVertical="true"-->

</RelativeLayout>
