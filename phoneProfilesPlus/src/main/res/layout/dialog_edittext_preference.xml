            <TextView
                android:id="@+id/dialog_edittext_preference_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:paddingStart="5dp"
