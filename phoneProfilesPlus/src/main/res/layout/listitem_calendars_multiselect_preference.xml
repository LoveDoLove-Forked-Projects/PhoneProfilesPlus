<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendars_multiselect_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/calendars_multiselect_pref_dlg_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
        android:layout_gravity="center_vertical"
        android:buttonTint="@color/checkbox_radiobutton_color"
        android:checked="false"
        android:focusable="false" />

    <LinearLayout 
        android:id="@+id/calendars_multiselect_pref_dlg_item_color"
        android:orientation="vertical"
        android:layout_width="5dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@color/pppColorRedWithAlpha"
        />
    
    <TextView
        android:id="@+id/calendars_multiselect_pref_dlg_item_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:text=""
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"/>

</LinearLayout>
