<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_log_help_root2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/dialog_title_divider_paddingTop">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_log_help_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="?attr/toolbarTheme"
        app:popupTheme="?attr/toolbarPopupMenu"
        app:titleTextAppearance="@style/ActivityToolbarTitleText"
        app:contentInsetEnd="@dimen/content_inset_end"
        app:contentInsetStart="@dimen/content_inset_start"
        app:contentInsetStartWithNavigation="@dimen/content_inset_start_with_navigation"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:elevation="1dp"/>

    <View
        android:id="@+id/activity_log_help_titleBarDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/divider_margin"
        android:layout_marginEnd="@dimen/divider_margin"
        android:background="@color/dialogDividerColor" />

<ScrollView android:id="@+id/activity_log_help_root"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:scrollbarStyle="outsideOverlay"
    tools:ignore="UselessParent">
<!--    android:fadeScrollbars="false"-->

    <LinearLayout
        android:id="@+id/activity_log_help_liLa1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/activity_log_help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text=""
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>

<!--    <View
        android:id="@+id/activity_log_help_buttonBarDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/divider_margin"
        android:layout_marginEnd="@dimen/divider_margin"
        android:layout_marginBottom="3dp"
        android:background="@color/dialogDividerColor" /> -->

</LinearLayout>
