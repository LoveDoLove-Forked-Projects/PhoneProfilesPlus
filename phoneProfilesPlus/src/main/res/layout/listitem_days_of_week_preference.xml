<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/days_of_week_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listItem_height" >

    <CheckBox
        android:id="@+id/days_of_week_pref_dlg_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
        android:layout_centerVertical="true"
        android:buttonTint="@color/checkbox_radiobutton_color"
        android:checked="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/days_of_week_pref_dlg_item_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/days_of_week_pref_dlg_item_checkbox"
        android:text=""
        android:textSize="@dimen/listItem_label_text_size"
        android:ellipsize="end"
        android:maxLines="1"/>

</RelativeLayout>
