<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mp_preference_material_body_root"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_weight="1">

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/mp_title_color"
        android:textSize="16sp"
        android:singleLine="false" />
    <!--    android:textColor="@color/activityPreferenceTitleTextColor"-->
    <!--    android:textSize="16sp"-->

    <TextView
        android:id="@android:id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/mp_body_color"
        android:layout_alignStart="@android:id/title"
        android:layout_below="@android:id/title"
        android:singleLine="false" />
    <!--    android:textSize="14sp"-->
    <!--    android:textColor="@color/activityPreferenceSummaryTextColor"-->

</RelativeLayout>