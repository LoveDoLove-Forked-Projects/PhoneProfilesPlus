<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_multiselect_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listItem_profileList_withIndicator_height"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/profile_multiselect_pref_dlg_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
        android:layout_gravity="center_vertical"
        android:buttonTint="@color/checkbox_radiobutton_color"
        android:checked="false"
        android:focusable="false" />

    <ImageView
        android:id="@+id/profile_multiselect_pref_dlg_item_icon"
        android:layout_width="@dimen/listItem_profile_icon_size"
        android:layout_height="@dimen/listItem_profile_icon_size"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_default"
        android:contentDescription="@string/profile_preferences_profileIcon"/>

    <LinearLayout
        android:id="@+id/profile_multiselect_pref_dlg_item_liLa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/profile_multiselect_pref_dlg_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/profile_name_default"
            android:textSize="@dimen/listItem_profile_name_size"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/profile_multiselect_pref_dlg_item_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_preferences_indicator_height"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/profile_preferences_indicator_image"
            android:scaleType="fitStart"
            android:src="@drawable/ic_profile_pref_volume_on" />

    </LinearLayout>

</LinearLayout>
