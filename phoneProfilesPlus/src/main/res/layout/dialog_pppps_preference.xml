<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ppppsPrefDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/alert_dialog_top_padding">

    <View
        android:id="@+id/ppppsPrefDialog_titleBarDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/divider_margin"
        android:layout_marginEnd="@dimen/divider_margin"
        android:background="@color/dialogDividerColor" />

    <ScrollView
        android:id="@+id/ppppsPrefDialog_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/ppppsPrefDialog_linla0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/ppppsPrefDialog_pppps_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp" />
            <Button
                android:id="@+id/ppppsPrefDialog_pppps_install_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/pp_button_background_selector"
                android:text="@string/pppps_pref_dialog_install_button"
                android:textAllCaps="false"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold" />

            <View
                android:id="@+id/ppppsPrefDialog_divider1"
                android:layout_width="30dp"
                android:layout_height="@dimen/divider_height"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/dialogDividerColor" />

            <TextView
                android:id="@+id/ppppsPrefDialog_pppps_launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp" />
<!--            android:layout_marginTop="15dp"-->
            <Button
                android:id="@+id/ppppsPrefDialog_pppps_launch_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/pp_button_background_selector"
                android:text="@string/pppps_pref_dialog_launch_button"
                android:textAllCaps="false"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/ppppsPrefDialog_buttonsDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/divider_margin"
        android:layout_marginEnd="@dimen/divider_margin"
        android:background="@color/dialogDividerColor" />

</LinearLayout>